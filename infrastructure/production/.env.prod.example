# === Postgres ===
POSTGRES_USER=fulllogin
POSTGRES_DB=agencia_saas
POSTGRES_PASSWORD=your_password_here

# === App URLs ===
API_URL=https://api.yourdomain.com
APP_URL=https://app.yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api/v1
FRONTEND_URL=https://app.yourdomain.com
API_BASE_URL=http://saas-api:3001

# === Database ===
DATABASE_URL=postgresql://user:password@postgres:5432/agencia_saas
NODE_ENV=production

# === Redis ===
REDIS_URL=redis://redis:6379

# === Evolution API ===
EVOLUTION_API_URL=http://evolution-api:8080
EVOLUTION_API_KEY=your_evolution_api_key_here
SERVER_URL=https://wa.yourdomain.com
AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES=true
DEL_INSTANCE=false
QRCODE_LIMIT=30
LANGUAGE=es
DATABASE_PROVIDER=postgresql

# ⚠️  CRITICAL FIX - Mensajes no llegan sin esto:
# Evolution API v2.3.x tiene un bug de cache Redis que marca mensajes como duplicados
# y los descarta silenciosamente. Mantener en false.
CACHE_REDIS_ENABLED=false

# === Chatwoot ===
CHATWOOT_ENABLED=true
CHATWOOT_API_TOKEN=your_chatwoot_token_here

# === AI / Ollama ===
OLLAMA_URL=http://ollama:11434
AI_MODEL=llama3.1

# === Email ===
EMAIL_FROM=YourApp <noreply@yourdomain.com>
RESEND_API_KEY=your_resend_key_here

# === Other ===
LOG_LEVEL=info
SERVICE_NAME=saas-api
TIME_ZONE=America/Lima
DEFAULT_LOCALE=es

# === WebSocket (required for Evolution Manager real-time chat updates) ===
WEBSOCKET_ENABLED=true
WEBSOCKET_GLOBAL_EVENTS=true
WEBSOCKET_ALLOWED_HOSTS=*
